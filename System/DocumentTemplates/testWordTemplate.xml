<?xml version="1.0" encoding="utf-8"?>
<Template
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="..\Schemas\DocumentSchema.xsd">
  <Fonts>
    <Font ID="Header">
      <Name>Arial</Name>
      <Size>26</Size>
    </Font>
    <Font ID="Usual">
      <Name>Arial</Name>
      <Size>20</Size>
    </Font>
    <Font ID="UsualBold">
      <Name>Arial</Name>
      <Size>20</Size>
      <Style>Bold</Style>
    </Font>
  </Fonts>
  <Document>
    <Word>
      <Properties>
        <Borders/>
        <Album/>
        <A5/>
        <Margins>
          <Left>50</Left>
          <Top>50</Top>
        </Margins>
      </Properties>
      <Structure>
        <Element>
          <Paragraph>
            <FontID>Header</FontID>
            <Parts>
              <Part>
                <Text>
                  <String>КАМПАНИЯ</String>
                </Text>
              </Part>
            </Parts>
          </Paragraph>
        </Element>
        <Element>
          <Paragraph/>
        </Element>
        <Element>
          <Paragraph/>
        </Element>
        <Element>
          <Paragraph>
            <FontID>Usual</FontID>
            <Parts>
              <Part>
                <Text>
                  <String>Начало: </String>
                </Text>
              </Part>
              <Part>
                <Text>
                  <Placeholder>campaignStartYear</Placeholder>
                </Text>
              </Part>
            </Parts>
          </Paragraph>
        </Element>
        <Element>
          <Paragraph/>
        </Element>
        <Element>
          <Paragraph/>
        </Element>
        <Element>
          <Paragraph>
            <FontID>Usual</FontID>
            <Parts>
              <Part>
                <Text>
                  <String>Название </String>
                </Text>
              </Part>
              <Part>
                <Text>
                  <Placeholder>campaignName</Placeholder>
                </Text>
              </Part>
            </Parts>
          </Paragraph>
        </Element>
        <Element>
          <Paragraph/>
        </Element>
        <Element>
          <Paragraph/>
        </Element>
        <Element>
          <Paragraph>
            <FontID>Usual</FontID>
            <Parts>
              <Part>
                <Text>
                  <String>Статус: </String>
                </Text>
              </Part>
              <Part>
                <Text>
                  <Placeholder>campaignStatus</Placeholder>
                </Text>
              </Part>
            </Parts>
          </Paragraph>
        </Element>
        <Element>
          <Table>
            <Numeration>true</Numeration>
            <Placeholder>campaignEduForms</Placeholder>
            <Structure>
              <Column>
                <Caption>ПП</Caption>
                <CaptionFontID>UsualBold</CaptionFontID>
                <DataFontID>UsualBold</DataFontID>
              </Column>
              <Column>
                <Caption>Формы образования</Caption>
                <Width>5000</Width>
                <CaptionFontID>UsualBold</CaptionFontID>
                <DataFontID>Usual</DataFontID>
              </Column>
              <Column>
                <Caption>Формы образования2</Caption>
                <Width>10000</Width>
                <CaptionFontID>UsualBold</CaptionFontID>
                <DataFontID>Usual</DataFontID>
              </Column>
            </Structure>
          </Table>
        </Element>
      </Structure>
    </Word>
  </Document>
</Template>
